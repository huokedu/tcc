<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/activity"
    android:orientation="vertical"
    tools:context=".ViewerActivity" >
    
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
        android:orientation="horizontal">
        
        <ToggleButton android:textOn="Axial" android:textOff="Axial" style="@style/image_button"/>
        
        <ToggleButton android:textOn="Coronal" android:textOff="Coronal" style="@style/image_button"/>
        
        <ToggleButton android:textOn="Outro" android:textOff="Outro" style="@style/image_button"/>
        <ToggleButton android:textOn="2D" android:textOff="2D" style="@style/image_button" android:onClick="flatViewerClick"/>
        
        <!-- <ImageButton android:src="@drawable/ic_menu_info_details" style="@style/image_button" android:onClick="dicomDetailsClick"/> -->
        
    </LinearLayout>
    
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
        android:orientation="horizontal">
        
        <SeekBar android:layout_width="match_parent" android:layout_height="wrap_content"/>
        
    </LinearLayout>
    
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
        android:orientation="horizontal">
        
        <android.opengl.GLSurfaceView android:layout_height="match_parent" android:layout_width="match_parent"
	    android:id="@+viewer/gl_surface_view">
	    
	</android.opengl.GLSurfaceView>
        
    </LinearLayout>
    
    

</LinearLayout>